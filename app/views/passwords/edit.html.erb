<!--begin:Content-->
<div class="d-flex w-100 flex-center p-15 position-relative overflow-hidden">
  <div class="login-wrapper">
    <!--begin:Sign In Form-->
    <div class="login-signin">
      <div class="text-center mb-10 mb-lg-20">
        <h3 class=""><%= t(".title") %></h3>
        <p class="text-muted font-weight-bold"><%= t(".description") %></p>
      </div>
      <%= form_for :password_reset,
          url: user_password_path(@user, token: @user.confirmation_token),
          html: { method: :put, class: 'form text-left', id: 'kt_login_forgot_form' } do |form| %>
        <div class="form-group py-2 m-0 border-bottom">
          <%= form.password_field :password, type: 'password',
            class: 'form-control h-auto border-0 px-0 placeholder-dark-75',
            placeholder: 'Password',
            autocomplet: 'off'
          %>
        </div>
        <div class="form-group d-flex flex-wrap flex-center mt-10">
          <button type="submit" class="btn btn-primary btn-pill font-weight-bold px-9 py-4 my-3 mx-2">Simpan Password</button>
          <%= link_to 'Batal', sign_in_path, class: 'btn btn-outline-primary btn-pill font-weight-bold px-9 py-4 my-3 mx-2' %>
        </div>
      <% end %>
    </div>
    <!--end:Sign In Form-->
  </div>
</div>
<!--end:Content-->
