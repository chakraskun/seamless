<!--begin::Aside body-->
<div class="d-flex flex-column-fluid flex-column flex-center mt-5 mt-lg-0">
  <a href="#" class="mb-15 text-center">
    <img src="https://d1nmrzy556ufv4.cloudfront.net/media/logos/logo-letter-1.png" class="max-h-75px" alt="" />
  </a>
  <!--begin::Signin-->
  <div class="login-form login-signin">
    <div class="text-center mb-10 mb-lg-20">
      <h2 class="font-weight-bold">Sign In</h2>
      <p class="text-muted font-weight-bold">Enter your email and password</p>
    </div>
    <!--begin::Form-->
    <%= form_for :session, url: session_path, html: {class: 'form'} do |form| %>
      <div class="form-group py-3 m-0">
        <%= form.email_field :email,
          class: 'form-control h-auto border-0 px-0 placeholder-dark-75',
          placeholder: 'Email',
          autocomplete: 'off',
          required: 1
        %>
      </div>
      <div class="form-group py-3 border-top m-0">
        <%= form.password_field :password,
          class: 'form-control h-auto border-0 px-0 placeholder-dark-75',
          placeholder: 'Password',
          required: 1
        %>
      </div>
      <div class="form-group d-flex flex-wrap justify-content-between align-items-center mt-3">
        <div class="checkbox-inline">
          <label class="checkbox checkbox-outline m-0 text-muted">
            <input type="checkbox" name="remember" />
            <span></span>Remember me</label>
        </div>
        <%= link_to 'Forget Password?', new_password_path(), class: 'text-muted text-hover-primary font-weight-bold', id: 'kt_login_forgot' %>
      </div>
      <div class="form-group d-flex flex-wrap justify-content-between align-items-center mt-2">
        <button type="submit" class="btn btn-primary font-weight-bold px-9 py-4 my-3">Sign In</button>
      </div>
    <% end %>
    <!--end::Form-->
  </div>
  <!--end::Signin-->
  <!--begin::Forgot-->
  <div class="login-form login-forgot">
    <div class="text-center mb-10 mb-lg-20">
      <h3 class="">Forgotten Password ?</h3>
      <p class="text-muted font-weight-bold">Enter your email to reset your password</p>
    </div>
    <!--begin::Form-->

    <%= form_for :session, url: forget_password_path, html: { class: 'form', id: 'kt_login_forgot_form'} do |form| %>
      <div class="form-group py-3 border-bottom mb-10">
        <%= form.text_field :email, type: 'email',
          class: 'form-control h-auto border-0 px-0 placeholder-dark-75',
          placeholder: 'Email',
          autocomplet: 'off'
        %>
      </div>
      <div class="form-group d-flex flex-wrap flex-center">
        <button type="submit"
                class="btn btn-primary font-weight-bold px-9 py-4 my-3 mx-2">Submit</button>
        <button
          class="btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-2">Cancel</button>
        <%= link_to 'Cancel', sign_in_path, class: 'btn btn-light-primary font-weight-bold px-9 py-4 my-3 mx-2' %>
      </div>
    <% end %>
    <!--end::Form-->
  </div>
  <!--end::Forgot-->
</div>
<!--end::Aside body-->
